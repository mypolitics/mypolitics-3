{
  "presets": [
    ["next/babel", {
        "preset-env": {
            "targets": ">2%, not dead"
        }
    }]
  ],
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["./"],
        "alias": {
          "@components/*": "./src/components/*",
          "@generated/*": "./src/generated/*",
          "@layout": "./src/layout",
          "@theme": "./src/theme",
          "@pages/*": "./src/pages/*",
          "@screens/*": "./src/screens/*",
          "@services/*": "./src/services/*",
          "@shared/*": "./src/shared/*",
          "@typeDefs/*": "./src/types/*",
          "@public/*": "./public/*",
          "@utils/*": "./src/utils/*",
          "@theme/*": "./src/theme/*",
          "@data/*": "./src/data/*",
          "@constants": "./src/constants.ts"
        }
      }
    ],
    [
      "styled-components",
      {
        "ssr": true,
        "displayName": false,
        "preprocess": false
      }
    ],
    "polished"
  ]
}
